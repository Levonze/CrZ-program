resource_name = "Resizing"
script/source = "extends Control

func size_control_to_label():
	var lbl := self.get_node(\"Label\")

	lbl.call_deferred(\"update\")
	self.call_deferred(\"_apply_label_size_deferred\", \"Label\")

func _apply_label_size_deferred(control: Control, label_path: String) -> void:
	var lbl := self.get_node_or_null(label_path) as Label
	if lbl == null: return
	var sz := lbl.get_minimum_size()
	sz.x += lbl.margin_left + lbl.margin_right
	sz.y += lbl.margin_top + lbl.margin_bottom

	control.rect_min_size = sz
	if self.get_parent() and control.get_parent() is Container:
		self.get_parent().call_deferred(\"queue_sort\")
